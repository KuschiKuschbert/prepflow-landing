{
  "name": "prepflow-landing",
  "version": "0.1.1",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "lint-staged",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "node scripts/analyze-bundle.js",
    "lighthouse": "lhci autorun",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --view --emulated-form-factor=mobile",
    "lighthouse:desktop": "lighthouse http://localhost:3000 --view --emulated-form-factor=desktop",
    "perf:test": "npm run build && npm run lighthouse",
    "perf:analyze": "npm run build && npm run analyze",
    "bundle:analyze": "node scripts/analyze-bundle.js",
    "bundle:webpack": "ANALYZE=true npm run build",
    "audit:deps": "node scripts/audit-dependencies.js",
    "bundle:size": "npm run build && npm run analyze",
    "lint:filesize": "node scripts/check-file-sizes.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "2.78.0",
    "@svgr/webpack": "^8.1.0",
    "@tanstack/react-query": "^5.87.4",
    "@tanstack/react-query-devtools": "^5.87.4",
    "@types/howler": "^2.2.12",
    "@types/qrcode": "^1.5.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "canvas-confetti": "^1.9.4",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.23.24",
    "gtag": "^1.0.1",
    "howler": "^2.2.4",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.553.0",
    "next": "^16.0.0",
    "next-auth": "^4.24.13",
    "openai": "^6.9.0",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.7",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-qr-code": "^2.0.18",
    "recharts": "^2.8.0",
    "stripe": "^19.2.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "16.0.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "^12.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
